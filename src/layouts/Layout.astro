---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Directory of Taraweeh Recordings" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Favicons -->
        <link rel="icon" href="/favicon-32x32.png" sizes="32x32" />
        <link rel="icon" href="/favicon-192x192.png" sizes="192x192" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <meta name="msapplication-TileImage" content="/mstile-270x270.png" />

        <!-- Open Graph / SEO -->
        <meta property="og:url" content="https://taraweeh.co.za" />
        <meta property="og:site_name" content="Taraweeh.co.za" />
        <meta property="og:title" content={title} />
        <meta property="og:type" content="website" />

        <!-- Google Fonts - Inter -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
            rel="stylesheet"
        />

        <title>{title}</title>
    </head>
    <body class="bg-background-base text-primary relative">
        {/* Islamic geometric background tile â€” static SVG, low opacity */}
        <div
            class="fixed inset-0 -z-10 opacity-[0.03] pointer-events-none"
            aria-hidden="true"
        >
            <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <pattern
                        id="islamic-tile"
                        x="0"
                        y="0"
                        width="60"
                        height="60"
                        patternUnits="userSpaceOnUse"
                    >
                        <path
                            d="M30 0 L36 12 L48 12 L38 20 L42 32 L30 24 L18 32 L22 20 L12 12 L24 12 Z"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="0.5"></path>
                        <path
                            d="M0 30 L6 42 L18 42 L8 50 L12 60 L0 54 L-12 60 L-8 50 L-18 42 L-6 42 Z"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="0.5"></path>
                        <path
                            d="M60 30 L66 42 L78 42 L68 50 L72 60 L60 54 L48 60 L52 50 L42 42 L54 42 Z"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="0.5"></path>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#islamic-tile)"
                ></rect>
            </svg>
        </div>
        <slot />
        <Footer />
    </body>
</html>
