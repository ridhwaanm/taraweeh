---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Page not found — Taraweeh" />
        <meta name="viewport" content="width=device-width" />

        <!-- Favicons -->
        <link rel="icon" href="/favicon-32x32.png" sizes="32x32" />
        <link rel="icon" href="/favicon-192x192.png" sizes="192x192" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <meta name="msapplication-TileImage" content="/mstile-270x270.png" />

        <!-- Open Graph / SEO -->
        <meta property="og:title" content="Page Not Found — Taraweeh" />
        <meta property="og:type" content="website" />

        <!-- Google Fonts - Inter -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
            rel="stylesheet"
        />

        <title>Page Not Found — Taraweeh</title>

        <style>
            /* =============================================
               AURORA BLOB ANIMATIONS
               ============================================= */
            @keyframes aurora-float-1 {
                0%,
                100% {
                    transform: translate(0, 0) scale(1);
                }
                33% {
                    transform: translate(60px, -40px) scale(1.08);
                }
                66% {
                    transform: translate(-40px, 30px) scale(0.95);
                }
            }
            @keyframes aurora-float-2 {
                0%,
                100% {
                    transform: translate(0, 0) scale(1.05);
                }
                33% {
                    transform: translate(-50px, 50px) scale(0.97);
                }
                66% {
                    transform: translate(70px, -20px) scale(1.1);
                }
            }
            @keyframes aurora-float-3 {
                0%,
                100% {
                    transform: translate(0, 0) scale(0.98);
                }
                50% {
                    transform: translate(30px, 60px) scale(1.06);
                }
            }

            /* =============================================
               METEOR ANIMATION
               ============================================= */
            @keyframes meteor-fall {
                0% {
                    transform: rotate(45deg) translateX(0);
                    opacity: 1;
                }
                70% {
                    opacity: 0.8;
                }
                100% {
                    transform: rotate(45deg) translateX(-800px);
                    opacity: 0;
                }
            }
            .meteor {
                position: absolute;
                width: 150px;
                height: 1.5px;
                background: linear-gradient(
                    to left,
                    transparent,
                    rgba(23, 138, 122, 0.6),
                    rgba(255, 255, 255, 0.9)
                );
                transform-origin: right center;
                animation: meteor-fall linear infinite;
                box-shadow: 0 0 6px 1px rgba(23, 138, 122, 0.25);
            }

            /* =============================================
               404 SHIMMER TEXT
               ============================================= */
            @keyframes shimmer-sweep {
                0% {
                    background-position: -200% center;
                }
                100% {
                    background-position: 200% center;
                }
            }
            .text-shimmer {
                background: linear-gradient(
                    90deg,
                    #010205 0%,
                    #010205 25%,
                    #178a7a 40%,
                    #2762ec 50%,
                    #178a7a 60%,
                    #010205 75%,
                    #010205 100%
                );
                background-size: 200% auto;
                -webkit-background-clip: text;
                background-clip: text;
                -webkit-text-fill-color: transparent;
                animation: shimmer-sweep 5s linear infinite;
            }

            /* =============================================
               GLOW PULSE behind 404
               ============================================= */
            @keyframes glow-pulse {
                0%,
                100% {
                    opacity: 0.3;
                    transform: translateX(-50%) scale(1);
                }
                50% {
                    opacity: 0.55;
                    transform: translateX(-50%) scale(1.08);
                }
            }
            .glow-404 {
                position: absolute;
                left: 50%;
                top: 50%;
                width: 700px;
                height: 350px;
                margin-top: -175px;
                background: radial-gradient(
                    ellipse at center,
                    rgba(23, 138, 122, 0.35) 0%,
                    rgba(39, 98, 236, 0.1) 50%,
                    transparent 70%
                );
                filter: blur(56px);
                pointer-events: none;
                animation: glow-pulse 3.5s ease-in-out infinite;
            }

            /* =============================================
               NAV CARDS
               ============================================= */
            .nav-card {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 20px 24px;
                background: rgba(255, 255, 255, 0.85);
                border: 1px solid rgba(23, 138, 122, 0.15);
                border-radius: 12px;
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
                text-decoration: none;
                color: #010205;
                transition: all 0.25s ease;
                position: relative;
                overflow: hidden;
            }
            .nav-card::before {
                content: "";
                position: absolute;
                inset: 0;
                background: transparent;
                transition: background 0.25s ease;
                border-radius: 12px;
                pointer-events: none;
            }
            .nav-card:hover {
                border-color: rgba(23, 138, 122, 0.5);
                box-shadow:
                    0 0 0 1px rgba(23, 138, 122, 0.35),
                    0 8px 32px rgba(23, 138, 122, 0.12),
                    0 2px 8px rgba(0, 0, 0, 0.06);
                transform: translateY(-2px);
            }
            .nav-card:hover::before {
                background: rgba(238, 239, 242, 0.5);
            }
            .nav-card-arrow {
                color: #178a7a;
                transition: transform 0.25s ease;
                flex-shrink: 0;
            }
            .nav-card:hover .nav-card-arrow {
                transform: translateX(5px);
            }
            .nav-card-icon {
                color: #178a7a;
                flex-shrink: 0;
            }

            /* =============================================
               REDUCED MOTION ACCESSIBILITY
               ============================================= */
            @media (prefers-reduced-motion: reduce) {
                .meteor {
                    animation: none;
                    opacity: 0;
                }
                .text-shimmer {
                    animation: none;
                    background: none;
                    -webkit-text-fill-color: #010205;
                    color: #010205;
                }
                .glow-404 {
                    animation: none;
                }
                .aurora-blob {
                    animation: none !important;
                }
            }
        </style>
    </head>

    <body
        class="bg-background-base text-primary min-h-screen flex flex-col relative overflow-x-hidden"
    >
        <!-- ============================================
             LAYER 1: Islamic Geometric Background Tile
             ============================================ -->
        <div
            class="fixed inset-0 -z-10 opacity-[0.03] pointer-events-none"
            aria-hidden="true"
        >
            <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <pattern
                        id="islamic-tile"
                        x="0"
                        y="0"
                        width="60"
                        height="60"
                        patternUnits="userSpaceOnUse"
                    >
                        <path
                            d="M30 0 L36 12 L48 12 L38 20 L42 32 L30 24 L18 32 L22 20 L12 12 L24 12 Z"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="0.5"></path>
                        <path
                            d="M0 30 L6 42 L18 42 L8 50 L12 60 L0 54 L-12 60 L-8 50 L-18 42 L-6 42 Z"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="0.5"></path>
                        <path
                            d="M60 30 L66 42 L78 42 L68 50 L72 60 L60 54 L48 60 L52 50 L42 42 L54 42 Z"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="0.5"></path>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#islamic-tile)"
                ></rect>
            </svg>
        </div>

        <!-- ============================================
             LAYER 2: Aurora Blobs
             ============================================ -->
        <div
            class="fixed inset-0 pointer-events-none overflow-hidden"
            aria-hidden="true"
            style="z-index: 0;"
        >
            <!-- Blob A: Teal, top-left -->
            <div
                class="aurora-blob"
                style="
                    position: absolute;
                    top: -10%;
                    left: -10%;
                    width: 65vw;
                    height: 65vw;
                    max-width: 750px;
                    max-height: 750px;
                    background: radial-gradient(ellipse at center, rgba(23,138,122,0.18) 0%, transparent 65%);
                    filter: blur(80px);
                    animation: aurora-float-1 18s ease-in-out infinite;
                "
            ></div>
            <!-- Blob B: Focus blue, top-right -->
            <div
                class="aurora-blob"
                style="
                    position: absolute;
                    top: -5%;
                    right: -15%;
                    width: 60vw;
                    height: 60vw;
                    max-width: 700px;
                    max-height: 700px;
                    background: radial-gradient(ellipse at center, rgba(26,68,234,0.12) 0%, transparent 65%);
                    filter: blur(88px);
                    animation: aurora-float-2 22s ease-in-out infinite;
                    animation-delay: -6s;
                "
            ></div>
            <!-- Blob C: Primary dark, bottom-center -->
            <div
                class="aurora-blob"
                style="
                    position: absolute;
                    bottom: 5%;
                    left: 25%;
                    width: 45vw;
                    height: 45vw;
                    max-width: 550px;
                    max-height: 550px;
                    background: radial-gradient(ellipse at center, rgba(1,2,5,0.07) 0%, transparent 65%);
                    filter: blur(64px);
                    animation: aurora-float-3 26s ease-in-out infinite;
                    animation-delay: -12s;
                "
            ></div>
        </div>

        <!-- ============================================
             LAYER 3: Meteor Streaks
             ============================================ -->
        <div
            class="fixed inset-0 overflow-hidden pointer-events-none"
            aria-hidden="true"
            style="z-index: 1;"
        >
            <div class="meteor" style="top: 5%;  right: 8%;  animation-duration: 5s;   animation-delay: 0s;"></div>
            <div class="meteor" style="top: 0%;  right: 22%; animation-duration: 7s;   animation-delay: 1.2s;"></div>
            <div class="meteor" style="top: 10%; right: 3%;  animation-duration: 4.5s; animation-delay: 2.5s;"></div>
            <div class="meteor" style="top: 0%;  right: 42%; animation-duration: 6s;   animation-delay: 0.8s;"></div>
            <div class="meteor" style="top: 2%;  right: 58%; animation-duration: 8s;   animation-delay: 3.7s;"></div>
            <div class="meteor" style="top: 0%;  right: 70%; animation-duration: 5.5s; animation-delay: 5.1s;"></div>
            <div class="meteor" style="top: 7%;  right: 0%;  animation-duration: 6.5s; animation-delay: 1.9s;"></div>
            <div class="meteor" style="top: 18%; right: 0%;  animation-duration: 4.8s; animation-delay: 4.3s;"></div>
            <div class="meteor" style="top: 0%;  right: 83%; animation-duration: 7.2s; animation-delay: 6.0s;"></div>
            <div class="meteor" style="top: 1%;  right: 33%; animation-duration: 5.8s; animation-delay: 2.1s;"></div>
            <div class="meteor" style="top: 14%; right: 16%; animation-duration: 6.2s; animation-delay: 7.4s;"></div>
            <div class="meteor" style="top: 0%;  right: 52%; animation-duration: 4.2s; animation-delay: 0.4s;"></div>
            <div class="meteor" style="top: 4%;  right: 78%; animation-duration: 7.8s; animation-delay: 3.0s;"></div>
            <div class="meteor" style="top: 22%; right: 1%;  animation-duration: 5.3s; animation-delay: 8.1s;"></div>
            <div class="meteor" style="top: 0%;  right: 91%; animation-duration: 6.8s; animation-delay: 4.8s;"></div>
        </div>

        <!-- ============================================
             LAYER 4: Main Content
             ============================================ -->

        <!-- Header -->
        <div
            class="h-12 flex items-center border-b border-contrast-low relative"
            style="z-index: 10; background: rgba(255,255,255,0.85); backdrop-filter: blur(8px);"
        >
            <div class="w-full px-4 flex items-center">
                <a href="/" class="flex items-center gap-2">
                    <img src="/logo.png" alt="Taraweeh" class="h-7 w-7" />
                </a>
            </div>
        </div>

        <!-- Main -->
        <main
            class="flex-1 flex flex-col items-center justify-center px-4 py-16 relative"
            style="z-index: 10;"
        >
            <!-- 404 Number Block -->
            <div class="relative mb-2 select-none" style="line-height: 1;">
                <div class="glow-404" aria-hidden="true"></div>
                <span
                    class="text-shimmer font-bold block"
                    style="font-size: var(--font-size-display-large); letter-spacing: -0.03em; line-height: 1; position: relative; z-index: 1;"
                >
                    404
                </span>
            </div>

            <!-- Headline -->
            <h1
                class="font-semibold text-center mb-3"
                style="font-size: var(--font-size-heading-xx-large); color: var(--color-contrast-high); line-height: 1.2;"
            >
                Page not found
            </h1>

            <!-- Subtext -->
            <p
                class="text-center mb-12 max-w-xs"
                style="font-size: var(--font-size-medium); color: var(--color-contrast-medium); line-height: 1.6;"
            >
                This page has wandered off. Let us guide you back.
            </p>

            <!-- Navigation Cards -->
            <div class="w-full max-w-sm flex flex-col gap-3">

                <!-- Home -->
                <a href="/" class="nav-card">
                    <div class="flex items-center gap-3">
                        <span class="nav-card-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                        </span>
                        <div>
                            <div class="font-semibold" style="font-size: var(--font-size-small);">Home</div>
                            <div style="font-size: var(--font-size-x-small); color: var(--color-contrast-medium);">Recordings library</div>
                        </div>
                    </div>
                    <span class="nav-card-arrow">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </span>
                </a>

                <!-- Venues -->
                <a href="/venues" class="nav-card">
                    <div class="flex items-center gap-3">
                        <span class="nav-card-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                        </span>
                        <div>
                            <div class="font-semibold" style="font-size: var(--font-size-small);">Venues</div>
                            <div style="font-size: var(--font-size-x-small); color: var(--color-contrast-medium);">Find Taraweeh near you</div>
                        </div>
                    </div>
                    <span class="nav-card-arrow">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </span>
                </a>

                <!-- Submit Venue -->
                <a href="/submit" class="nav-card">
                    <div class="flex items-center gap-3">
                        <span class="nav-card-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="8" x2="12" y2="16"></line>
                                <line x1="8" y1="12" x2="16" y2="12"></line>
                            </svg>
                        </span>
                        <div>
                            <div class="font-semibold" style="font-size: var(--font-size-small);">Submit a Venue</div>
                            <div style="font-size: var(--font-size-x-small); color: var(--color-contrast-medium);">Add your masjid to the map</div>
                        </div>
                    </div>
                    <span class="nav-card-arrow">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </span>
                </a>

            </div>
        </main>

        <Footer />
    </body>
</html>
